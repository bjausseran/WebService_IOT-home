model User {
  id String @id @default(cuid())
  email String
  password String
  username String
}

model Captor {
  id String @id @default(cuid())
  type SensorType
  designation String
  rawValue_int Int @default(0)
  rawValue_bool Boolean @default(false)
}

model Actuator {
    id String @id @default(cuid())
    type ActuatorType
    designation String
    state Boolean
}

enum ActuatorType {
    BLINDS
    LIGHT
}
enum SensorType {
    TEMPERATURE
    HUMIDITY
    BARO
    PROXIMITY
}